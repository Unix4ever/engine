<template>
  <viewport :bg-colour="self['bg-colour']" :texture-id="self['texture-id']"/>
</template>

<script>
return {
  props = {
    ['bg-colour'] = {
      type = ImVue_Number,
      default = 0x000000FF
    },
    ['texture-id'] = {
      type = ImVue_String,
      default = "sceneEditor"
    },
    ['camera-name'] = {
